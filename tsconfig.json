{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./src/*"],
      "@/api/*": ["./src/api/*"],
      "@/api/graphql/*": ["./src/api/graphql/*"],
      "@/configs/*": ["./src/configs/*"],
      "@/definitions/*": ["./src/definitions/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/services/*": ["./src/services/*"],
      "@/utils/*": ["./src/utils/*"],
    },
    "typeRoots": [
      "./src/definitions/",
      "./node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*"
  ]
}
